@{
    ViewData["Title"] = "Home Page";
}

@model ProjectsListViewModel

    <h1>Water Project</h1>

    
    @foreach (Project p in Model.Projects)
    {                                        
        <h3>@p.ProjectName</h3>
        
        <ul>
            <li>Project Type: @p.ProjectType</li>
            <li>Program: @p.ProgramName</li>
            <li>Impact: @p.ProjectImpact</li>
            <li>Installation: @p.ProjectInstallation</li>
            <li>Phase: @p.ProjectPhase</li>
        </ul>
    }

<div page-model="@Model.PaginationInfo" page-action="Index"></div>


